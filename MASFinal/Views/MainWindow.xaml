<Window x:Class="MASFinal.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uśmiechnięta Wypożyczalnia" Height="375" Width="800" Background="Black">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Uśmiechnięta Wyporzyczalnia" 
                   FontSize="40"  
                   Foreground="White" 
                   FontWeight="DemiBold" />
            
            <Label Content=":)" 
                   FontSize="37"  
                   FontWeight="DemiBold"
                   VerticalContentAlignment="Top"
                   Foreground="{StaticResource MainGreen}"/>
        </StackPanel>

        <Frame NavigationUIVisibility="Hidden" x:Name="_mainFrame" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
